<div class="container-fluid">
    {{{formName}}} Form
    <div class="card">
        <div class="card-body">
            <form name="{{{formName}}}Form" role="form" novalidate (ngSubmit)="save()" [formGroup]="{{{formName}}}Form">
                <div class="row">
                    <div class="col">
                        <label class="label" for="field_publisherName">Name</label>
                        <input type="text" class="form-control form-control-box" name="publisherName"
                               id="field_publisherName"
                               formControlName="publisherName" required/>
                    </div>
                <button type="submit" [disabled]="isSaving || editForm.invalid" class="btn btn-primary">
                    Save
                </button>
            </form>
        </div>
    </div>
</div>
